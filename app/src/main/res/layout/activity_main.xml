<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene">

    <com.jpmcosta.androidtestproject.view.PaddingImageView
        android:id="@+id/icon_issue"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@color/teal_200"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/issue"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/icon_issue"
        app:layout_constraintStart_toEndOf="@id/icon_issue"
        app:layout_constraintTop_toTopOf="@id/icon_issue" />

    <com.jpmcosta.androidtestproject.view.PaddingImageViewFixed
        android:id="@+id/icon_fixed"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:background="@color/teal_200"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_issue" />

    <TextView
        android:id="@+id/text_fixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/fixed"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/icon_fixed"
        app:layout_constraintStart_toEndOf="@id/icon_fixed"
        app:layout_constraintTop_toTopOf="@id/icon_fixed" />

</androidx.constraintlayout.motion.widget.MotionLayout>